<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardrounded">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="50dp"
        android:paddingVertical="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Reporta"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Reporta"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/reportatext"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:fontFamily="@font/poppins"
            android:lineSpacingExtra="4sp"
            android:paddingVertical="15dp"
            android:text="En caso de ser victima de hurto, puedes registrar tu articulo robado y evitar que sea revendido."
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/circulo"
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:layout_marginStart="-25dp"
        android:layout_marginBottom="-25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/circulo" />

    <ImageView
        android:id="@+id/siguiente"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/btn1" />

    <ImageView
        android:id="@+id/anterior"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="25dp"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/btn1" />
</androidx.constraintlayout.widget.ConstraintLayout>
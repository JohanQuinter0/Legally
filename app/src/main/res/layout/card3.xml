<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardrounded">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="50dp"
        android:paddingVertical="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Recupera"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Recupera"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/recuperatext"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:fontFamily="@font/poppins"
            android:lineSpacingExtra="4sp"
            android:paddingVertical="15dp"
            android:text="Con la ayuda de todos los usuarios, recuperaremos articulos robados."
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/triangulo"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:layout_marginStart="-25dp"
        android:layout_marginBottom="-25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/triangulo" />

    <ImageView
        android:id="@+id/anterior"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="25dp"
        android:rotation="180"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/btn1" />
</androidx.constraintlayout.widget.ConstraintLayout>
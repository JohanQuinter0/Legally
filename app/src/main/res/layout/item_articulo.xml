<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/rounded_item_art"
    android:orientation="horizontal"
    android:paddingLeft="25dp"
    android:paddingEnd="30dp">

    <ImageView
        android:id="@+id/art_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="15dp"
        android:contentDescription="Ícono artículo"
        android:src="@drawable/tecnologia" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/art_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Nombre del artículo"
            android:textColor="@color/principal"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/art_serial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins"
            android:text="S/N: XXXXX"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/art_detalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins"
            android:text="Detalles:\n..."
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>